/* pages/details/details.wxss */
page{

}
.book-details-wraper{
  padding-bottom: 50rpx;
}
.containder{
  padding: 2%;
}
.book-message{
  display: flex;
 


}
.m-50{
  margin-bottom: 100rpx
}
.book-dr{
  margin-left: 20rpx;

}
.book-img image{
  width: 200rpx;
  height: 280rpx;
  

}
.book-other{
  display: flex;
  flex-direction: column;
  padding-left: 3%;

}
.book-name{
  font-weight: 700;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.book-other text{
  font-size: 26rpx;
  color: rgb(148, 164, 175);
  line-height: 2.5;
}
.button{
  display: flex;
  justify-content: space-between;
  width: 90%;
  padding: 0 5%;
  margin-top: 30rpx;
  
}
.button button{
  padding: 0;
  margin: 0;
  width: 300rpx;
  font-size: 25rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.book-desc text:nth-of-type(1){
  font-size: 32rpx;
  font-weight: 700;

}
.book-desc{
  margin-top: 20rpx;
}
.line{
  padding-top:  7px;
  background-color: #dbbcbc;
  margin-top: 30rpx;
  
}
.lookmulu{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;

}
.lookmulu .look-one text:nth-of-type(1){

font-size: 32rpx;
font-weight: 700;
}
.lookmulu .look-one text:nth-of-type(2){
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}
.lookmulu .time{
  font-size: 28rpx;
  color: #666;

}
.book-dcontent{
  margin-top: 30rpx;

}
.book-dcontent text{
  font-size: 30rpx;
  color: #333;
  text-indent: 2;
}
.button-num{
  position: fixed;
  left: 0;
  bottom: 4rpx;
  right: 0;
  padding:10rpx 3%;

  
  box-shadow: 0 0 5rpx 5rpx rgba(0, 0, 0,.3)
}
.readbook{
  height: 45rpx;
  line-height: 45rpx;
  background-color: #dbbcbc;
  font-size: 28rpx;
}