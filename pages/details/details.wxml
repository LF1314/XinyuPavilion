
<!-- 书籍详情页面 -->
<view class='containder'>

<!-- 上半部分书籍信息start -->
<view class='book-details-wraper'>

<view class='book-message'>
<view class='book-img'><image src="{{bookdata.data.img}}"></image></view>
<view class='book-dr'>
<view class='book-name'><text>{{bookdata.data.title}}</text></view>
<!-- 书籍其信息 start -->
<view class='book-other'>
<text>作者：{{bookdata.data.author}}</text>
<text>{{bookdata.data.looknums}}人在看</text>
