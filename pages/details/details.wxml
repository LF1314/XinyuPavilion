</view>
<!-- 书籍其信息 stop -->
</view>
</view>
<!-- 书籍信息 -->
 <view class='button'>
<button bindtap='collect' disabled="{{iscollect}}"> {{iscollect ? "已收藏" : "收藏"}}</button>
<button open-type="share">分享好友</button>
</view>

</view>
<!-- 上半部分书籍信息stop -->
<view class='line'></view>
  <view>
     <view class='book-desc'>
     <text>简介</text>
     </view>
     <view class='book-dcontent'>
     <text>{{bookdata.data.desc}}</text>
     </view>
     <view class='lookmulu'>
   <view class='look-one'>
     <text>查看目录</text>
     <text>共{{bookdata.length}}章</text>
   </view>

   <text class='time'>2018年7月1日</text>
     </view>
     <view class='line m-50'></view>

   </view> 
<view class='button-num'>
<button bindtap='readbook'>
