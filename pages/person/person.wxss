.iconfont{
    font-family:"iconfont" !important;
    font-size:25px;font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;}
.icon-shoucang:before { content: "\e6b0"; }

.icon-wenzhang-:before { content: "\e613"; }

.icon-zhuti:before { content: "\e638"; }

.icon-yuedu:before { content: "\e605"; }
.img{
position: fixed;
display: block;
top: 0;
left: 0;
height: 100%;
width: 100%;
z-index: -111;
}
.person-message{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 40%;
  padding: 0 20rpx;
  padding-top: 40rpx;

}
.person-wraper{
  height: 75%;
  display: flex;
  justify-content: space-around;
  padding-bottom: 20rpx;
}
.person-img{
 width: 200rpx;
  height: 200rpx;
  
}
.person-img image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;

}
.personjianje{
  font-size: 28rpx;
  color: #666;
}
.person-name{
  display: flex;
  font-size: 30rpx;
  color: black;
  font-weight: 700;
  flex-direction: column;
  width: 65%;
  height: 200rpx;
  justify-content: space-between;
  padding-left: 5%;

}
.person-other{
  border-top: 3px solid #fff;
  height: 25%;
  display: flex;
  justify-content: space-between
}
.shou-chang{
  display: flex;
  text-align: center;
  flex-direction: column;
  width: 30%;
  font-size: 30rpx;
  color: black;
  
}
.middlenav{
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  justify-content: space-around;
  height: 700rpx;
  font-size: 30rpx;
  color: rgb(99, 96, 96);
  
}
.middlenav view{
   height:100rpx;
 line-height: 100rpx;
 background-color:rgba(f, f, f,0.9);
   border: 1px solid #f9f9f9 ;
   border-radius: 10%;
   padding: 0 60rpx;
   display: flex;
   justify-content: space-between
}

.login{
  position:fixed;
  left: 5%;
  bottom: 30rpx;
  width: 90%;
  border-radius: 20rpx;
  background-color:rgb(103, 103, 212);
  color: #fff;
}
/* //设置主题导航栏 */
.moretheam{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color:#fff;
  z-index: 888;
  height:100%;
  transform: translate3d(0,-100%,0);
  transition:transform .3s linear;
}
.active {
  transform:translate3d(0,0,0)
}
.themlist{
  display: flex;
  justify-content:space-between;
  padding: 0 20rpx;
  border-bottom: 1px dashed #333;
  font-size: 22rpx;
  color: #666;
  height: 200rpx;
  line-height: 200rpx;

}
.themlist image{
  height: 180rpx;
  width:120rpx;
}